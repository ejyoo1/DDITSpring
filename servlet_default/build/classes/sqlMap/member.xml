<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
			PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
			"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="member"> 
	<select id="memberSearchId" parameterClass="com.servlet.vo.MemberVO" resultClass="int">
		SELECT count(*)
			FROM MEMBER 
			WHERE USER_ID = #userId#
	</select>
	
	<select id="memberSearchPw" parameterClass="com.servlet.vo.MemberVO" resultClass="int">
		SELECT count(*)
			FROM MEMBER 
			WHERE USER_ID = #userId# AND USER_PW = #userPw#	
	</select>
	
	<select id="memberSearch" parameterClass="com.servlet.vo.MemberVO" resultClass="com.servlet.vo.MemberVO">
		SELECT 
    		USER_ID userId
    		,USER_PW userPw
    		,USER_PHONE userPhone
    		,USER_EMAIL userEmail
			FROM MEMBER
			WHERE USER_ID = #userId# AND USER_PW = #userPw#	
	</select>
	
	
	<!-- 회원 관리 시스템 쿼리 -->
	<select id="selectMemberList" parameterClass="ejyoo.vo.MemberDTO" resultClass="ejyoo.vo.MemberDTO">
		SELECT 
		    USER_ID userId
		    ,USER_PW userPw
		    ,USER_PHONE userPhone
		    ,USER_EMAIL userEmail
		FROM MEMBER
		WHERE 1=1
		<isNotEmpty property= "userId" prepend="AND">
			USER_ID = #userId#
		</isNotEmpty>
		<isNotEmpty property= "userPw" prepend="AND">
			USER_PW = #userPw#
		</isNotEmpty>
		<isNotEmpty property= "userPhone" prepend="AND">
			USER_PHONE = #userPhone#
		</isNotEmpty>
		<isNotEmpty property= "userEmail" prepend="AND">
			USER_EMAIL = #userEmail#
		</isNotEmpty>
	</select>
	
	<insert id="insertMember" parameterClass="ejyoo.vo.MemberDTO">
		INSERT INTO MEMBER(
		    USER_ID
		    ,USER_PW
		    ,USER_PHONE
		    ,USER_EMAIL
		)VALUES(
		    #userId#
		    ,#userPw#
		    ,#userPhone#
		    ,#userEmail#
		)
	</insert>
	
	<update id="updateMember" parameterClass="ejyoo.vo.MemberDTO">
		UPDATE MEMBER SET 
		    USER_PHONE = #userPhone#
		    ,USER_EMAIL = #userEmail#
		WHERE USER_ID = #userId#
	</update>
	
	<delete id="deleteMember" parameterClass="ejyoo.vo.MemberDTO">
		DELETE FROM MEMBER 
		WHERE USER_ID = #userId#
	</delete>
</sqlMap>			





